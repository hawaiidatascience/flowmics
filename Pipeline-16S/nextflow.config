/*
 * -------------------------------------------------
 *  Nextflow config file
 * -------------------------------------------------
 */

// Global default params
import java.text.SimpleDateFormat
params {

  timestamp = new SimpleDateFormat("yyyy-MM-dd").format(new java.util.Date())
  outdir = "$PWD/" + "Results-16S_" + timestamp
  errorsHandling = "terminate"
  singleEnd=false // use reverse read or not

  // Pre-filtering
  minReads = 50

  // Dada2 quality filtering
  truncLen = "c(220,190)"
  minLength = "c(20,20)"
  maxEE = "c(3,3)"
  truncQ = "c(2,2)"
  rmphix = "TRUE"

  // Dada2 merging parameters
  minOverlap = 20
  maxMismatch = 1
  
  // Mothur parameters
  criteria = 95 // mothur optimization criteria
  // taxaToFilter = 'Bacteria;Cyanobacteria;Oxyphotobacteria;Chloroplast;-unknown;' // set to empty string for no filter
  taxaToFilter = 'unknown;'
  subsamplingQuantile = 0.10
  minSubsampling = 5000

  // Postprocessing filters
  minAbundance = 1 // Remove OTUs with a total abundance equal or below {minAbundance}

  // Taxonomy
  // taxaMinId = 0.8
}

timeline {
  enabled=false
}

report {
  enabled=false
}


profiles {
  hpc{
    includeConfig 'conf/manoa_hpc.config'
  }
  radis{
    includeConfig 'conf/radis.config'
  }
  poire{
    includeConfig 'conf/poire.config'
  }  
}

