 *  Test config file
 * -----------------
 *
 */

singularity.enabled = true

process {
    executor = "local"

    errorStrategy = "terminate"
    maxRetries = 2
    maxErrors = "-1"

    withLabel: process_low {
         cpus = 1
         memory = 2.GB
         time = 3.m
    }

    withLabel: process_medium {
         cpus = 2
         memory = 4.GB
         time = 6.m
    }

    withLabel: process_high {
         cpus = 2
         memory = 7.GB
         time = 30.m
    }
}
