/*
 * -------------------------------------------------
 *  Poire server config file
 * -------------------------------------------------
 * 
 */

executor{
   jobName = { "$task.tag" }
   queueSize = 40
}

params {
  max_time = 24.h
  // reads = "$HOME/projects/HIDSI/0-Data/Amend-Miseq1/demultiplexed/*_R1.fastq.gz"
  reads = "$HOME/projects/HIDSI/0-Data/ITS_testdata/*_R1.fastq.gz"  
  constax_path = "$HOME/.local/bin/friendly_CONSTAX"
}

process {
   executor = 'local'
   stageInMode = 'symlink'
   stageOutMode = 'rsync'

   withLabel: low_computation {
   	      cpus = 4
	      memory = 4.GB
	      time = '2h'
	      }

   withLabel: medium_computation {
   	      cpus = 8
	      memory = 16.GB
	      time = '1d'
	      }
	      
   withLabel: high_computation {
   	      cpus = 40
	      memory = 128.GB
	      time = '3d'
   }	      
}	


