/*
 * -------------------------------------------------
 *  Nextflow config file
 * -------------------------------------------------
 */

// Global default params
import java.text.SimpleDateFormat

profiles {
  hpc{
    includeConfig 'conf/manoa_hpc.config'
  }
  radis{
    includeConfig 'conf/radis.config'
  }
  poire{
    includeConfig 'conf/poire.config'
  }  
  base{
    includeConfig 'conf/base.config'  
  }  
}

params {

  timestamp = new SimpleDateFormat("yyyy-MM-dd").format(new java.util.Date())
  outdir = "./" + timestamp + "-16S-results"
  errorsHandling = "terminate"
  
  // Dada2 quality filtering
  truncLen = "c(220,190)"
  minLength = "c(20,20)"
  maxEE = "c(2,2)"
  truncQ = "c(2,2)"
  rmphix = "TRUE"

  // Dada2 merging parameters
  minOverlap = 20
  maxMismatch = 1
  
  criteria = 95 // mothur optimization criteria
  taxaToFilter = "unknown" // set to empty string for no filter
  revRead = 1 // use reverse read or not

  // Taxonomy
  // taxaMinId = 0.8
}

timeline {
  enabled=true
}

report {
  enabled=true
}